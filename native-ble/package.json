{
  "name": "@ghostmesh/native-ble",
  "version": "0.1.0",
  "description": "Native BLE module for Node.js with Extended Advertising support - no pairing required",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc",
    "clean": "rm -rf dist build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "scan:real": "node tools/scan-real.js",
    "advertise:real": "node tools/advertise-real.js"
  },
  "keywords": [
    "bluetooth",
    "ble",
    "bluetooth-low-energy",
    "advertising",
    "mesh",
    "native",
    "addon",
    "corebluetooth",
    "extended-advertising"
  ],
  "author": "GhostMesh Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghostmesh/native-ble.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "gypfile": true,
  "dependencies": {
    "@abandonware/bleno": "^0.6.2",
    "@abandonware/noble": "^1.9.2-26",
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "node-gyp": "^10.0.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
